---

<section class="relative gradient-bg overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23000" fill-opacity="0.1"%3E%3Ccircle cx="7" cy="7" r="1"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')"></div>
  </div>

  <div class="relative container-custom section-padding">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Left Column - Content -->
      <div class="animate-fade-in">
        <div class="text-center lg:text-left">
          <!-- Badge -->
          <div class="inline-flex items-center px-4 py-2 bg-blue-100 text-blue-800 rounded-full text-sm font-medium mb-6">
            <span class="w-2 h-2 bg-blue-600 rounded-full mr-2"></span>
            FREE Business Advisory & Fractional CFO Group
          </div>

          <!-- Main Headline -->
          <h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold text-gray-900 leading-tight mb-6">
            Everything You Need To Sign Premium 
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-blue-800">
              $2K - $10K/Month
            </span>
            Clients
          </h1>

          <!-- Subheadline -->
          <p class="text-xl lg:text-2xl text-gray-600 mb-8 leading-relaxed">
            Scale Your Highly-Profitable $1M+ Advisory & Fractional CFO Business
          </p>

          <!-- Value Proposition -->
          <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-100 mb-8">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">What You Get FREE Today:</h3>
            <ul class="space-y-3 text-gray-700">
              <li class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Exclusive Community Access
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Valuable Bonuses & Resources
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                LIVE Zoom Calls with Yuri Mavashev
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Personalized Feedback & Guidance
              </li>
            </ul>
          </div>

          <!-- CTA -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <a href="#join-now" class="btn-primary text-lg px-8 py-4 inline-flex items-center justify-center">
              Get Free Access Now
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <!-- Right Column - Image/Visual -->
      <div class="animate-slide-up lg:order-last">
        <div class="relative">
          <!-- Main Image -->
          <div class="relative z-10">
            <img 
              src="https://res.cloudinary.com/dil14r8je/image/upload/v1768288098/auto-site-builder/World%20Class%20Firms/image_0.jpg" 
              alt="Yuri Mavashev - Fractional CFO Expert" 
              class="w-full rounded-2xl shadow-2xl"
              loading="eager"
            />
          </div>
          
          <!-- Floating Cards -->
          <div class="absolute -top-4 -left-4 bg-white rounded-lg shadow-xl p-4 z-20 hidden lg:block">
            <div class="flex items-center space-x-3">
              <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                </svg>
              </div>
              <div>
                <p class="text-sm font-semibold text-gray-900">Premium Clients</p>
                <p class="text-xs text-gray-600">$2K-$10K/month</p>
              </div>
            </div>
          </div>
          
          <div class="absolute -bottom-4 -right-4 bg-white rounded-lg shadow-xl p-4 z-20 hidden lg:block">
            <div class="flex items-center space-x-3">
              <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <div>
                <p class="text-sm font-semibold text-gray-900">Scale to $1M+</p>
                <p class="text-xs text-gray-600">Advisory Business</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>